<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane prefWidth="300"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="jakubwiraszka.dialogs.HeroStatsDialogController"
            stylesheets="@../styles.css">
    <content>
        <GridPane fx:id="mainGridPane">
            <Label fx:id="healthLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button fx:id="addHealth" onAction="#add" text="+" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button fx:id="subtractHealth" onAction="#subtract" text="-" GridPane.rowIndex="1"
                    GridPane.columnIndex="3"/>
            <Label fx:id="powerLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Button fx:id="addPower" onAction="#add" text="+" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <Button fx:id="subtractPower" onAction="#subtract" text="-" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
            <Label fx:id="agilityLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button fx:id="addAgility" onAction="#add" text="+" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            <Button fx:id="subtractAgility" onAction="#subtract" text="-" GridPane.rowIndex="3"
                    GridPane.columnIndex="3"/>
        </GridPane>
    </content>
</DialogPane>
