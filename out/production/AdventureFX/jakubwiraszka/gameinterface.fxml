<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="gameBorderPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="jakubwiraszka.GameInterfaceController">
        <top>
            <VBox alignment="CENTER" spacing="10">
                <MenuBar>
                    <Menu text="Exit">
                        <MenuItem onAction="#mainMenu" text="Main Menu"/>
                    </Menu>
            </MenuBar>
                <Label fx:id="locationNameLabel">
                    <font>
                        <Font name="Arial italic" size="25" />
                    </font>
                </Label>
                <Label fx:id="locationDescriptionLabel">
                    <font>
                        <Font name="Arial italic" size="20" />
                    </font>
                </Label>
                <Label fx:id="messageLabel">
                    <font>
                        <Font name="Arial italic" size="30" />
                    </font>
                </Label>
            </VBox>
        </top>
        <center>
            <ScrollPane maxHeight="800.0" maxWidth="1600.0" pannable="true" BorderPane.alignment="CENTER">
                <StackPane>
                    <GridPane fx:id="gameMapGridPane" alignment="CENTER" style="-fx-background-color: #30b832"/>
                    <GridPane fx:id="contentMapGridPane" alignment="CENTER"/>
                    <GridPane fx:id="playerMapGridPane" alignment="CENTER"/>
                </StackPane>
            </ScrollPane>
        </center>
        <right>
            <VBox>
                <GridPane>
                    <Button fx:id="upButton" onAction="#move" prefWidth="120" text="Up" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <font>
                            <Font name="Arial bold" size="27" />
                        </font>
                    </Button>
                    <Button fx:id="downButton" onAction="#move" prefWidth="120" text="Down" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                            <Font name="Arial bold" size="27" />
                        </font>
                    </Button>
                    <Button fx:id="rightButton" onAction="#move" prefWidth="120" text="Right" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <font>
                            <Font name="Arial bold" size="27" />
                        </font>
                    </Button>
                    <Button fx:id="leftButton" onAction="#move" prefWidth="120" text="Left" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font>
                            <Font name="Arial bold" size="27" />
                        </font>
                    </Button>
                    <Button fx:id="firstActionButton" onAction="#contentAppears" prefWidth="120" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="Arial bold" size="27" />
                        </font>
                    </Button>
                    <Button fx:id="secondActionButton" onAction="#contentAppears" prefWidth="120" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <font>
                            <Font name="Arial bold" size="27" />
                        </font>
                    </Button>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <Label fx:id="actionSpaceLabel" />
                <SplitPane orientation="VERTICAL" />
                <VBox fx:id="actionVBox" />
            </VBox>
        </right>

        <bottom>
            <VBox>
                <HBox spacing="10">
                    <Label text="Change map zoom:"/>
                    <Slider fx:id="zoomSlider" majorTickUnit="0.2" max="1.0" maxWidth="500.0" min="0.1" minorTickCount="2" prefWidth="100" showTickMarks="true" value="1.0" />
                </HBox>
                <HBox fx:id="statsHBox" spacing="10">
                    <Label text="Statistics: ">
                        <font>
                            <Font name="Arial bold" size="20" />
                        </font>
                    </Label>
                    <Label fx:id="statisticsLabel">
                        <font>
                            <Font name="Arial italic" size="20" />
                        </font>
                    </Label>
                    <Label text="Experience: ">
                        <font>
                            <Font name="Arial bold" size="20" />
                        </font>
                    </Label>
                    <Label fx:id="levelLabel">
                        <font>
                            <Font name="Arial italic" size="20" />
                        </font>
                    </Label>
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>
