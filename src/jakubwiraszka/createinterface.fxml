<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Slider?>
<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jakubwiraszka.CreateInterfaceController">
        <top>
            <VBox alignment="CENTER" spacing="10">
                <HBox spacing="5.0">
                    <Label text="Name:">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="20.0" top="4.0" />
               </padding></Label>
                    <TextField fx:id="nameTextField" />
                    <Label text="Height:">
               <padding>
                  <Insets top="4.0" />
               </padding></Label>
                    <Spinner fx:id="heightSpinner" editable="true" max="100" min="0" prefHeight="25.0" prefWidth="60.0" />
                    <Label text="Width:">
               <padding>
                  <Insets top="4.0" />
               </padding></Label>
                    <Spinner fx:id="widthSpinner" editable="true" max="100" min="0" prefHeight="25.0" prefWidth="60.0" />
                    <Label text="Create:">
               <padding>
                  <Insets left="20.0" top="4.0" />
               </padding></Label>
                    <Button fx:id="emptyButton" onAction="#create" text="Empty" />
                    <Button fx:id="randomButton" onAction="#create" text="Random" />
                    <Button alignment="CENTER_RIGHT" onAction="#saveWorld" text="Save and exit">
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin></Button>
                    <Button fx:id="newButton" alignment="CENTER_RIGHT" onAction="#newWorld" text="New" />
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
                </HBox>
            </VBox>
        </top>
        <right>
            <HBox>
                <ListView fx:id="locationsListView" />
                <ListView fx:id="enemiesListView" />
                <ListView fx:id="treasuresListView" />
            </HBox>
        </right>
   <center>
      <ScrollPane maxHeight="800.0" maxWidth="1600.0" BorderPane.alignment="CENTER">
         <content>
                  <StackPane>
                      <GridPane fx:id="gameMapGridPane" alignment="CENTER" style="-fx-background-color: #30b832"/>
                      <GridPane fx:id="contentMapGridPane" alignment="CENTER"/>
                      <GridPane fx:id="playerMapGridPane" alignment="CENTER"/>
                  </StackPane>
         </content>
      </ScrollPane>
   </center>
    <bottom>
        <Slider fx:id="zoomSlider" min="0.1" max="1.0" value="1.0" prefWidth="100"/>
    </bottom>
</BorderPane>
