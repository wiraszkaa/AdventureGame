<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jakubwiraszka.InventoryController">
    <right>
        <GridPane fx:id="statsGridPane">
            <TextField fx:id="nameTextField" prefWidth="70.0" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0" />
            <Button fx:id="addHealth" onAction="#add" prefHeight="50" prefWidth="30.0" text="+" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets left="10.0" />
            </GridPane.margin></Button>
            <Button fx:id="addPower" onAction="#add" prefHeight="50" prefWidth="30.0" text="+" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets left="10.0" top="10.0" />
            </GridPane.margin></Button>
            <Button fx:id="addAgility" onAction="#add" prefHeight="50" prefWidth="30.0" text="+" GridPane.columnIndex="2" GridPane.rowIndex="3">
            <GridPane.margin>
               <Insets left="10.0" top="10.0" />
            </GridPane.margin></Button>
            <Button fx:id="subtractHealth" onAction="#subtract" prefHeight="50" prefWidth="30.0" text="-" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets right="10.0" />
            </GridPane.margin></Button>
            <Button fx:id="subtractPower" onAction="#subtract" prefHeight="50" prefWidth="30.0" text="-" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="10.0" top="10.0" />
            </GridPane.margin></Button>
            <Button fx:id="subtractAgility" onAction="#subtract" prefHeight="50" prefWidth="30.0" text="-" GridPane.columnIndex="0" GridPane.rowIndex="3">
            <GridPane.margin>
               <Insets right="10.0" top="10.0" />
            </GridPane.margin></Button>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </right>

    <left>
        <ListView fx:id="itemsListView" />
    </left>
</BorderPane>
