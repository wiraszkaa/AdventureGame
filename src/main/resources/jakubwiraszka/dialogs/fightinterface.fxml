<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<DialogPane prefHeight="900" prefWidth="1800" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jakubwiraszka.dialogs.FightInterfaceController"
            stylesheets="@../styles.css">
    <content>
    <BorderPane>
    <left>
        <VBox fx:id="heroVBox" alignment="CENTER">
            <Label fx:id="heroNameLabel" alignment="CENTER" textAlignment="CENTER">
            <font>
                <Font name="Arial bold" size="50" />
            </font>
            </Label>
        </VBox>
    </left>

    <right>
        <VBox fx:id="enemyVBox" alignment="CENTER">
            <Label fx:id="enemyNameLabel" alignment="CENTER" textAlignment="CENTER">
                <font>
                    <Font name="Arial bold" size="50" />
                </font>
            </Label>
        </VBox>
    </right>

    <center>
        <VBox fx:id="actionVBox">
               <BorderPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </BorderPane.margin></VBox>
    </center>

    <bottom>
        <GridPane fx:id="attackGridPane" alignment="CENTER">
            <Button fx:id="quickAttackButton" onAction="#attack" prefHeight="40.0" prefWidth="150.0" text="Quick Attack" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <font>
                     <Font name="Arial" size="20.0" />
                  </font></Button>
            <Button fx:id="strongAttackButton" defaultButton="true" onAction="#attack" prefHeight="40.0" prefWidth="150.0" text="Strong Attack" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
                  <font>
                     <Font name="Arial" size="20.0" />
                  </font></Button>
            <Button fx:id="chargedAttackButton" onAction="#attack" prefHeight="40.0" prefWidth="150.0" text="Charged Attack" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0">
                  <font>
                     <Font name="Arial" size="20.0" />
                  </font></Button>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
        </GridPane>
    </bottom>
    </BorderPane>
    </content>
</DialogPane>
